#include <stdio.h>

int sender(int a[], int n) {
    int sum = 0, i;
    printf("\n****SENDER SIDE****\n");
    for(i = 0; i < n; i++)
        sum += a[i];
    printf("SUM IS: %d\n", sum);
    int checksum = ~sum;
    printf("CHECKSUM IS:%d\n", checksum);
    return checksum;
}

void receiver(int a[], int n, int scheck) {
    int sum = 0, i;
    printf("\n****RECEIVER SIDE****\n");
    for(i = 0; i < n; i++)
        sum += a[i];
    printf("SUM IS:%d\n", sum);
    sum += scheck;
    int rcheck = ~sum;
    printf("CHECKSUM IS:%d\n", rcheck);
}

int main() {
    int n, scheck;
    printf("ENTER SIZE OF THE STRING:");
    scanf("%d", &n);
    int a[n];
    printf("ENTER THE ELEMENTS OF THE ARRAY TO CALCULATE CHECKSUM:\n");
    for(int i = 0; i < n; i++)
        scanf("%d", &a[i]);
    scheck = sender(a, n);
    receiver(a, n, scheck);
    return 0;
}

