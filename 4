==================== CRC-12 ====================            ==================== CRC-16 ====================            ================== CRC-CCITT ==================
#include <stdio.h>                                         #include <stdio.h>                                         #include <stdio.h>
#include <string.h>                                         #include <string.h>                                         #include <string.h>

unsigned int CRC12(const char *data) {                      unsigned int CRC16(const char *data) {                      unsigned int CRC_CCITT(const char *data) {
    unsigned int poly = 0x80F;                                 unsigned int poly = 0x8005;                                   unsigned int poly = 0x1021;
    unsigned int crc  = 0x000;                                 unsigned int crc  = 0x8000;                                   unsigned int crc  = 0xFFFF;

    for (int i = 0; i < strlen(data); i++) {                   for (int i = 0; i < strlen(data); i++) {                   for (int i = 0; i < strlen(data); i++) {
        unsigned char byte = data[i];                              unsigned char byte = data[i];                              unsigned char byte = data[i];
        for (int j = 0; j < 8; j++) {                              for (int j = 0; j < 8; j++) {                              for (int j = 0; j < 8; j++) {
            int bit = ((byte >> (7 - j)) & 1) ^                        int bit = ((byte >> (7 - j)) & 1) ^                        int bit = ((byte >> (7 - j)) & 1) ^
                      ((crc >> 11) & 1);                                       ((crc >> 15) & 1);                                       ((crc >> 15) & 1);
            crc <<= 1;                                                 crc <<= 1;                                                 crc <<= 1;
            if (bit) crc ^= poly;                                      if (bit) crc ^= poly;                                      if (bit) crc ^= poly;
            crc &= 0xFFF;                                              crc &= 0xFFFF;                                             crc &= 0xFFFF;
        }                                                           }                                                           }
    }                                                           }                                                           }
    return crc;                                                  return crc;                                                  return crc;
}                                                           }                                                           }

int main() {                                                int main() {                                                int main() {
    char data[100];                                              char data[100];                                              char data[100];
    printf("Enter data: ");                                      printf("Enter data: ");                                      printf("Enter data: ");
    scanf("%s", data);                                           scanf("%s", data);                                           scanf("%s", data);
    printf("CRC-12 = %03X\n", CRC12(data));                      printf("CRC-16 = %04X\n", CRC16(data));                      printf("CRC-CCITT = %04X\n", 					 			 	    		 									CRC_CCITT(data));
}                                                           }                                                           }

Output:                                                     Output:                                                     Output:
Enter data: HELLO                                           Enter data: HELLO                                           Enter data: HELLO
CRC-12: D44                                                 CRC-16: 34ED                                               CRC-CCITT: 9065
